<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mazharul.islam.jihan.reportings_spy.Activity.SuperAdmin.NewSpyAcountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/loginBackground"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/new_acount_header"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:id="@+id/header"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:weightSum="5.5">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/ReportNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ractangular_border"
                            android:gravity="center"
                            android:hint="রিপোর্টের নাম লিখুন"
                            android:inputType="textMultiLine"
                            android:minHeight="50dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/ReportAdressEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ractangular_border"
                            android:gravity="center"
                            android:hint="রিপোর্টের ঠিকানা লিখুন"
                            android:inputType="textMultiLine"
                            android:minHeight="50dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/ReportUserNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ractangular_border"
                            android:gravity="center"
                            android:hint="ব্যবহারকারীর নাম (User name)"
                            android:inputType="textMultiLine"
                            android:minHeight="50dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="পাসওয়ার্ড প্রথম ৩টি ঘর অক্ষর এবং পরবর্তী ৩টি ঘর সংখ্যাই লিখুন ।"
                            android:textColor="@android:color/background_dark"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="1dp"
                                android:background="@drawable/ractangle_left">

                                <EditText
                                    android:id="@+id/PasswordCarecterOneEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:background="@null"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="1dp"
                                android:layout_marginLeft="1dp">

                                <EditText
                                    android:id="@+id/PasswordCarecterTwoEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/GreenBackground"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="1dp"
                                android:layout_marginLeft="1dp">

                                <EditText
                                    android:id="@+id/PasswordCarecterThreeEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/GreenBackground"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="1dp"
                                android:layout_marginLeft="1dp">

                                <EditText
                                    android:id="@+id/PasswordNumberOneEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/RedBackground"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:maxLength="1" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="1dp"
                                android:layout_marginLeft="1dp">

                                <EditText
                                    android:id="@+id/PasswordNumberTwoEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/RedBackground"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginLeft="1dp"
                                android:background="@drawable/ractangle_right">

                                <EditText
                                    android:id="@+id/PasswordNumberThreeEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:background="@null"/>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnSaveUserInformation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ractangular_color"
                            android:text="সম্পন্ন করুন"
                            android:textColor="#ffffff"
                            android:textSize="24sp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
