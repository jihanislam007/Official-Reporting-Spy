<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="md.mazharul.islam.jihan.reportings.Activity.LogInActivity"
    android:background="@color/loginBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="2dp">

            <Spinner
                android:id="@+id/LogInSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangular_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="1dp">

            <EditText
                android:id="@+id/UserNameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangular_white"
                android:gravity="center"
                android:hint="User Name"
                android:textColorHint="@color/loginBackground"
                android:inputType="textAutoComplete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="3dp"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="@drawable/ractangle_left">

                <EditText
                    android:id="@+id/PasswordCarecterOneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:background="@null"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp">

                <EditText
                    android:id="@+id/PasswordCarecterTwoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/GreenBackground"
                    android:maxLength="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="text"/>

            </LinearLayout>
            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp">

            <EditText
                android:id="@+id/PasswordCarecterThreeEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GreenBackground"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="text"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp">

                <EditText
                    android:id="@+id/PasswordNumberOneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/RedBackground"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp">

                <EditText
                    android:id="@+id/PasswordNumberTwoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/RedBackground"
                    android:maxLength="1"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:background="@drawable/ractangle_right">

                <EditText
                    android:id="@+id/PasswordNumberThreeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@null"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="3dp">

            <Button
                android:id="@+id/LogInButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ractangular_color"
                android:text="Log In"
                android:textColor="@color/loginBackground"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ForgotPassTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Forgot your Password ?"
                android:textColor="#9aa4b6"
                android:textSize="18sp"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
